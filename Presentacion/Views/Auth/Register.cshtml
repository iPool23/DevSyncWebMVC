@model Presentacion.Models.UsuarioModel

@{
    ViewBag.Title = "Registro de Usuario";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md">
        <div class="bg-white shadow-lg rounded-2xl p-8 space-y-8">
            <div class="text-center">
                <h2 class="text-3xl font-extrabold text-gray-900">Regístrate</h2>
                <p class="mt-2 text-sm text-gray-600">Crea una nueva cuenta</p>
            </div>

            @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { enctype = "multipart/form-data", @class = "space-y-6" }))
            {
                @Html.AntiForgeryToken()

                <div>
                    @Html.Label("Usuario", new { @class = "block text-sm font-medium text-gray-700" })
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-gray-400"></i>
                        </div>
                        @Html.TextBoxFor(m => m.sNombreUsuario, new { @class = "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder = "Ingrese su usuario" })
                    </div>
                    @Html.ValidationMessageFor(m => m.sNombreUsuario, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div>
                    @Html.Label("Correo", new { @class = "block text-sm font-medium text-gray-700" })
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-gray-400"></i>
                        </div>
                        @Html.TextBoxFor(m => m.sCorreo, new { @class = "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder = "Ingrese su correo" })
                    </div>
                    @Html.ValidationMessageFor(m => m.sCorreo, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div>
                    @Html.Label("Contraseña", new { @class = "block text-sm font-medium text-gray-700" })
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        @Html.PasswordFor(m => m.sContrasenia, new { @class = "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder = "Ingrese su contraseña" })
                    </div>
                    @Html.ValidationMessageFor(m => m.sContrasenia, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div>
                    @Html.Label("Nombres", new { @class = "block text-sm font-medium text-gray-700" })
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-gray-400"></i>
                        </div>
                        @Html.TextBoxFor(m => m.sNombres, new { @class = "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder = "Ingrese sus nombres" })
                    </div>
                    @Html.ValidationMessageFor(m => m.sNombres, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div>
                    @Html.Label("Apellidos", new { @class = "block text-sm font-medium text-gray-700" })
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-user text-gray-400"></i>
                        </div>
                        @Html.TextBoxFor(m => m.sApellidos, new { @class = "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm", placeholder = "Ingrese sus apellidos" })
                    </div>
                    @Html.ValidationMessageFor(m => m.sApellidos, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div>
                    @Html.Label("Imagen", new { @class = "block text-sm font-medium text-gray-700" })
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-image text-gray-400"></i>
                        </div>
                        @Html.TextBoxFor(m => m.sImgUrl, new { @class = "hidden" })
                        @Html.TextBoxFor(m => m.ImgFile, new { type = "file", @class = "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" })
                    </div>
                    @Html.ValidationMessageFor(m => m.ImgFile, "", new { @class = "text-red-500 text-xs mt-1" })
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                        Registrarse
                    </button>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-red-600 text-center block text-sm" })
            }

            <div class="text-center">
                <p class="text-sm text-gray-600">¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Auth")" class="text-blue-600 hover:text-blue-500">Inicia Sesión</a></p>
            </div>
        </div>
    </div>
</div>