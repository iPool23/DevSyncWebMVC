@{
    ViewBag.Title = "Editar Actividad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6 bg-gray-100 min-h-screen">
    <!-- Título -->
    <header class="mb-6">
        <h1 class="text-3xl font-bold text-blue-600">Editar Actividad</h1>
        <p class="text-gray-600">Modifica los detalles de la actividad del Sprint 1.</p>
    </header>

    <!-- Formulario de edición de actividad -->
    <form action="/activities/update" method="POST" class="bg-white p-6 rounded-lg shadow-md">

        <!-- Campo de nombre -->
        <div class="mb-4">
            <label for="nombre" class="block text-gray-700 font-bold mb-2">Nombre</label>
            <input type="text" id="nombre" name="nombre" value="Diseño de interfaz" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
        </div>

        <!-- Campo de descripción -->
        <div class="mb-4">
            <label for="descripcion" class="block text-gray-700 font-bold mb-2">Descripción</label>
            <textarea id="descripcion" name="descripcion" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">Crear wireframes y prototipos.</textarea>
        </div>

        <!-- Campo de progreso -->
        <div class="mb-4">
            <label for="progreso" class="block text-gray-700 font-bold mb-2">Progreso</label>
            <input type="text" id="progreso" name="progreso" value="50%" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
        </div>

        <!-- Campo de tipo -->
        <div class="mb-4">
            <label for="tipo" class="block text-gray-700 font-bold mb-2">Tipo</label>
            <select id="tipo" name="tipo" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                <option value="Backlog" selected>Backlog</option>
                <option value="Bug">Bug</option>
                <option value="UwU">UwU</option>
            </select>
        </div>

        <!-- Campo de estado -->
        <div class="mb-6">
            <label for="estado" class="block text-gray-700 font-bold mb-2">Estado</label>
            <select id="estado" name="estado" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                <option value="En progreso" selected>En progreso</option>
                <option value="Completado">Completado</option>
                <option value="Pendiente">Pendiente</option>
            </select>
        </div>

        <!-- Botones de acción -->
        <div class="flex justify-between">
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400">Guardar</button>
            <a href="/activities" class="px-4 py-2 bg-gray-600 text-white rounded shadow hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-400">Cancelar</a>
        </div>
    </form>
</div>