@{
    ViewBag.Title = "Editar Proyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6">
    <!-- Header del Formulario -->
    <header class="flex justify-between items-center pb-4 border-b border-gray-200">
        <div>
            <h1 class="text-2xl font-bold text-blue-600">Editar Proyecto</h1>
        </div>
        <a href="/proyectos" class="text-sm text-blue-600 hover:underline">Volver a Proyectos</a>
    </header>

    <!-- Formulario -->
    <div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg mt-6">
        <form class="space-y-6">
            <!-- Nombre del Proyecto -->
            <div>
                <label for="nombre" class="block text-sm font-medium text-gray-700">Nombre del Proyecto</label>
                <input type="text" id="nombre" name="nombre"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                       placeholder="Ingresa el nombre del proyecto" />
            </div>

            <!-- Progreso -->
            <div>
                <label for="progreso" class="block text-sm font-medium text-gray-700">Progreso (%)</label>
                <input type="number" id="progreso" name="progreso" min="0" max="100"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                       placeholder="0 - 100" />
            </div>

            <!-- Descripción -->
            <div>
                <label for="descripcion" class="block text-sm font-medium text-gray-700">Descripción</label>
                <textarea id="descripcion" name="descripcion" rows="3"
                          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                          placeholder="Descripción del proyecto"></textarea>
            </div>

            <!-- Fechas -->
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label for="fechaInicio" class="block text-sm font-medium text-gray-700">Fecha de Inicio</label>
                    <input type="date" id="fechaInicio" name="fechaInicio"
                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" />
                </div>
                <div>
                    <label for="fechaFin" class="block text-sm font-medium text-gray-700">Fecha de Fin</label>
                    <input type="date" id="fechaFin" name="fechaFin"
                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" />
                </div>
            </div>

            <!-- Selección del Líder -->
            <div>
                <label for="lider" class="block text-sm font-medium text-gray-700">Líder del Proyecto</label>
                <select id="lider" name="lider"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                    <option disabled selected>Selecciona un líder</option>
                    <option value="1">Líder 1</option>
                    <option value="2">Líder 2</option>
                </select>
            </div>

            <!-- Selección del Equipo -->
            <div>
                <label for="equipo" class="block text-sm font-medium text-gray-700">Equipo</label>
                <select id="equipo" name="equipo"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                    <option disabled selected>Selecciona un equipo</option>
                    <option value="A">Equipo A</option>
                    <option value="B">Equipo B</option>
                </select>
            </div>

            <!-- Estado del Proyecto -->
            <div>
                <label for="estado" class="block text-sm font-medium text-gray-700">Estado</label>
                <select id="estado" name="estado"
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                    <option disabled selected>Selecciona un estado</option>
                    <option value="iniciado">Iniciado</option>
                    <option value="en-progreso">En Progreso</option>
                    <option value="finalizado">Finalizado</option>
                </select>
            </div>

            <!-- Imagen del Proyecto -->
            <div>
                <label for="imagen" class="block text-sm font-medium text-gray-700">URL de la Imagen</label>
                <input type="url" id="imagen" name="imagen"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                       placeholder="https://example.com/imagen.jpg" />
            </div>

            <!-- Botones -->
            <div class="flex justify-between">
                <button type="button"
                        class="px-4 py-2 bg-blue-600 text-white font-semibold rounded-md shadow-sm hover:bg-blue-700">
                    Guardar Cambios
                </button>
                <button type="button"
                        class="px-4 py-2 bg-yellow-500 text-white font-semibold rounded-md shadow-sm hover:bg-yellow-600">
                    Cancelar
                </button>
                <button type="button"
                        class="px-4 py-2 bg-green-500 text-white font-semibold rounded-md shadow-sm hover:bg-green-600">
                    Sprints
                </button>
            </div>
        </form>
    </div>
</div>
