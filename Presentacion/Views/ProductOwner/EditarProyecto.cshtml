<script>
    // Mostrar/ocultar el dropdown de etiquetas existentes
    function toggleDropdownTags() {
        const dropdown = document.getElementById('tagsDropdown');
        dropdown.classList.toggle('hidden');
    }

    // Seleccionar una etiqueta del dropdown
    function selectTag(tag) {
        document.getElementById('selectedTag').innerText = tag;
        document.getElementById('tagsDropdown').classList.add('hidden');
    }

    // Cerrar el modal de etiquetas
    function closeTagsModal(event) {
        if (event && event.target !== event.currentTarget) return;
        document.getElementById('tagsModal').classList.add('hidden');
    }

    // Abrir el modal de etiquetas
    function openTagsModal() {
        document.getElementById('tagsModal').classList.remove('hidden');
    }

    // Opcional: Función para manejar el agregado de nuevas etiquetas
    function addNewTag() {
        const input = document.querySelector('#tagsModal input[type="text"]');
        const newTag = input.value.trim();
        if (newTag) {
            const existingTags = document.querySelector('.flex.flex-wrap');
            const tagElement = document.createElement('div');
            tagElement.className = 'bg-gray-100 text-gray-700 px-3 py-1 rounded-lg shadow-sm';
            tagElement.innerText = newTag;
            existingTags.appendChild(tagElement);
            input.value = ''; // Limpiar el input
        }
    }
</script>


