<!-- Formulario de crear nueva actividad -->
<div id="activityModal" onclick="closeModal(event)" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
    <div onclick="event.stopPropagation()" class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md relative">

        <!-- Botón de cerrar -->
        <button onclick="closeModal()" class="absolute top-3 right-3 text-gray-500 hover:text-gray-700">
            x
        </button>

        <h4 class="text-lg font-semibold text-gray-700 mb-4">Nueva/Editar Actividad</h4>

        <!-- Inputs del formulario (falta agregar lógica para la bdd) -->

        <label class="text-sm text-gray-600 block mb-2">
            Nombre:
            <input type="text"
                   class="w-full mt-1 p-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300"
                   placeholder="Escribe el nombre" />
        </label>

