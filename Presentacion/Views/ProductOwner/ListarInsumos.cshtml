@{
    ViewBag.Title = "Listar Insumos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6 bg-gray-100 min-h-screen">
    <!-- Título de la página -->
    <header class="mb-6">
        <h1 class="text-3xl font-bold text-blue-600">Lista de Insumos</h1>
        <p class="text-gray-600">Gestión de insumos del sprint 69.</p>
    </header>

    <!-- Tabla de insumos -->
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <!-- Encabezados -->
            <thead class="bg-blue-600">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Código</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Nombre</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Descripción</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-white uppercase tracking-wider">Cantidad</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-white uppercase tracking-wider">Acciones</th>
                </tr>
            </thead>
            <!-- Cuerpo -->
            <tbody class="bg-white divide-y divide-gray-200">
                <!-- Ejemplo de fila (repetir con datos reales) -->
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">1</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">Insumo A</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">Descripción del insumo A</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">10</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <!-- Botones de acción -->
                        <button class="inline-flex items-center px-4 py-2 bg-blue-500 text-white text-xs font-semibold rounded shadow hover:bg-blue-600 focus:ring-2 focus:ring-blue-400">
                            Editar
                        </button>
                        <button class="inline-flex items-center px-4 py-2 bg-red-500 text-white text-xs font-semibold rounded shadow hover:bg-red-600 focus:ring-2 focus:ring-red-400 ml-2">
                            Eliminar
                        </button>
                    </td>
                </tr>
                <!-- Acá lo sacas de la bedede pe -->
            </tbody>
        </table>
    </div>

    <!-- Botón flotante para agregar insumos -->
    <button class="fixed bottom-6 right-6 bg-green-600 text-white rounded-full p-4 shadow-lg hover:bg-green-700 focus:outline-none focus:ring-4 focus:ring-green-400">
        Agregar
    </button>
</div>
