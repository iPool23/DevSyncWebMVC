@model Entidad.EntProyecto

@{
    ViewBag.Title = "Editar Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6">
    <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="flex items-center mb-6">
            <a href="@Url.Action("Listar", "Proyecto")" class="text-gray-600 hover:text-gray-800">
                <i class="fas fa-arrow-left mr-2"></i>Volver
            </a>
        </div>

        <h2 class="text-2xl font-bold mb-6">Editar Equipo del Proyecto</h2>

        @using (Html.BeginForm("EditarEquipo", "Proyecto", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.iCodigo)

            <div class="space-y-6">
                <div>
                    <h3 class="text-lg font-semibold">Proyecto: @Model.sNombre</h3>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Nombre del Equipo</label>
                    <input type="text"
                           name="nombreEquipo"
                           value="@(Model.eCodigoEquipo?.sNombre ?? "")"
                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500"
                           required />
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-red-500">
                        @Html.ValidationSummary()
                    </div>
                }

                <div class="flex justify-end space-x-3">
                    <a href="@Url.Action("Listar", "Proyecto")"
                       class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                        Cancelar
                    </a>
                    <button type="submit"
                            class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none">
                        Guardar Cambios
                    </button>
                </div>
            </div>
        }
    </div>
</div>